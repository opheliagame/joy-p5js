{
  "compilerOptions": {
    // "outDir": "./build",
    // "module": "System",
    // "outFile": "./build/joy.p5.js",
    "allowJs": true,
    "target": "ES2015",
    "lib": ["ES2017", "DOM"],
    "module": "es6",
		"moduleResolution": "node",
		"declaration": true,
		"rootDir": "./src",
		"outDir": "./lib",
		"declarationDir": "./lib",
    // "strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
  },
  "include": ["./src/**/*"]
}